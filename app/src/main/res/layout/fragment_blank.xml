<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.esoukhanov.group_project_organizer.BlankFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/dateHere"
        android:id="@+id/dateHere"/>

    <TextView
        android:id="@+id/litarsHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:text="@string/litarsHere" />

    <TextView
        android:id="@+id/priceHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/litarsHere"
        android:layout_marginStart="11dp"
        android:layout_marginTop="25dp"
        android:text="@string/priceHere" />

    <TextView
        android:id="@+id/kmHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/priceHere"
        android:layout_below="@+id/priceHere"
        android:layout_marginTop="28dp"
        android:text="@string/kmHere" />

    <TextView
        android:id="@+id/idHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/kmHere"
        android:layout_below="@+id/kmHere"
        android:layout_marginTop="32dp"
        android:text="@string/idHere" />

    <Button
        android:id="@+id/deleteHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/idHere"
        android:layout_marginStart="15dp"
        android:text="Delete this record" />

</RelativeLayout>
