<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:columnCount="4"
    android:rowCount="3"
    tools:context="com.example.esoukhanov.group_project_organizer.ThermoItemActivity">
    <TextView
        android:id="@+id/label"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="@+id/label"
        android:textSize="36px"
        android:layout_column="0"
        android:layout_gravity="fill_vertical|left">
    </TextView>
    <TextView
        android:id="@+id/morning_label"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:text="9:00"
        android:textSize="30px"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_gravity="fill_vertical">
    </TextView>
    <TextView
    android:id="@+id/afternoon_label"
    android:layout_width="50dp"
    android:layout_height="20dp"
    android:text="13:00"
    android:textSize="30px"
    android:layout_column="1"
    android:layout_row="1"
    android:layout_gravity="fill_vertical">
</TextView>
    <TextView
        android:id="@+id/evening_label"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:text="22:00"
        android:textSize="30px"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_gravity="fill_vertical">
    </TextView>
    <TextView
        android:id="@+id/morning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+id/morning"
        android:textSize="30px"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_gravity="fill_vertical">
    </TextView>
    <TextView
        android:id="@+id/afternoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23.5"
        android:textSize="30px"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_gravity="fill_vertical">
    </TextView>
    <TextView
        android:id="@+id/evening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21.5"
        android:textSize="30px"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_gravity="fill_vertical">
    </TextView>
    <ImageButton
        android:id="@+id/configButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_columnWeight="1"
        android:layout_column="3"
        android:layout_rowSpan="3"
        android:src="@drawable/ic_mode_edit_black_24dp"
        android:layout_gravity="right|top"/>
    <FrameLayout
        android:id="@+id/thermoFrameLayout"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_column="3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

    </FrameLayout>

</GridLayout>